RUN_ONCE=true
# Если хотите обработать конкретный файл сразу:
# VOD_FILE=./data/storage/vods/channel_name/file.ts

# Режим запуска: webhook (рекомендуется) или poll
TRIGGER_MODE=webhook
WEBHOOK_HOST=127.0.0.1
WEBHOOK_PORT=8090
WEBHOOK_PATH=/webhook/livestreamdvr
# Опционально: токен для заголовка X-Webhook-Token
WEBHOOK_TOKEN=

# Поиск готового VOD
WATCH_DIR=./data/storage/vods
VOD_EXTENSIONS=.ts,.mp4,.mkv
POLL_INTERVAL_SEC=20
STABLE_FOR_SEC=120
MIN_VOD_SIZE_MB=200
PROCESSED_STATE_FILE=./processed_vods.json
# Если webhook отдает контейнерный путь, можно переписать его в путь хоста:
# SOURCE_PATH_REWRITE_FROM=/usr/local/share/twitchautomator/data
# SOURCE_PATH_REWRITE_TO=./data
SOURCE_PATH_REWRITE_FROM=/usr/local/share/twitchautomator/data
SOURCE_PATH_REWRITE_TO=./data
# Разбивка длинного VOD на чанки по N минут перед отправкой в Opus (0 = отключить)
VOD_CHUNK_MINUTES=60
CHUNK_OUTPUT_DIR=./chunks

# Публикация VOD для Opus: local_http (локально) или dropbox
PUBLISH_MODE=dropbox
PUBLIC_OUTPUT_DIR=/var/www/twitchcheker/public_vods
PUBLIC_BASE_URL=https://twitchcheker.online/public_vods

